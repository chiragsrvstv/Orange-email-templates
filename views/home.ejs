<html>
  <head>
    <title>Orange Email Templates 🍊</title>
  </head>
  <link rel="stylesheet" type="text/css" href="app.css" />
  <div class="login-box">
    <h2>Generate free email templates</h2>
    <form method="POST" action="/template">
      <div class="user-dropdown">
        <select class="user-box" name="style" id="">
          <option value="simple">Simple</option>
          <option value="elegant">Elegant</option>
        </select>
      </div>
      <div class="user-box">
        <input type="text" name="title" required="" />
        <label>Title</label>
      </div>
      <div class="user-box">
        <input type="text" name="company" required="" />
        <label>Company</label>
      </div>
      <div class="user-box">
        <input type="text" name="signature" required="" />
        <label>Signature</label>
      </div>
      <button type="submit">
        <a>
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          Submit
        </a>
      </button>
    </form>
  </div>
</html>
